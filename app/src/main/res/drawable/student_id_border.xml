<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border -->
    <item
        android:left="-1dp"
        android:right="-1dp"
        android:top="-1dp"
        android:bottom="-1dp">
        <shape android:shape="rectangle">
            <stroke
                android:color="#48A23C"
                android:width="2dp" /> <!-- Border color and width -->
            <corners android:radius="10dp" /> <!-- Adjust corner radius as needed -->
        </shape>
    </item>

    <!-- Transparent Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Fully transparent background -->
        </shape>
    </item>
</layer-list>
